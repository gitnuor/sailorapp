<form method="POST" id="frmAdd" class="my-login-validation" novalidate="" enctype="multipart/form-data" autocomplete="off">

    <div class="box" style="border-width:0px;">

        <input type="hidden" value="@Model.style_product_size_group_id.ToString()" id="hd_style_product_size_group_id" />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="labelNormal " style="margin-bottom: 10px!important;font-weight:bold;">Product Size Group Name</label>

                    <input style="width:100%" type="text" asp-for="style_product_size_group_name" class="border-gray-200 form-control" />
                    <span asp-validation-for="style_product_size_group_name" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="form-group">
                    <label class="labelNormal " style="margin-bottom: 10px!important;font-weight:bold;">Is Separate Prize?</label>
                    <br>

                    @Html.RadioButtonFor(model => model.is_separate_price, true) Seperate Price
                    @Html.RadioButtonFor(model => model.is_separate_price, false) Same Price
                    <span asp-validation-for="is_separate_price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <button id="btnaddRow" onclick="addnewrow();return false;" style="margin-top:30px;">Add Row</button>

                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-md-12">
                <table id="DTProductSizeDetlConfig" style="margin-top:-35px;" class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th><label class="labelNormal ">SL</label></th>

                            <th><label class="labelNormal ">Size Name</label></th>

                            <th><label class="labelNormal ">Remove</label></th>
                        </tr>
                    </thead>
                </table>
            </div>

        </div>



        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-primary" onclick="SaveProductSize();" id="btnSaveProductSize"><i class="fa fa-save"></i>&nbsp;&nbsp;Update </button>
                <button type="button" class="btn btn-danger" onclick="closepopup();" id="btnCancel"><i class="fa fa-angle-double-left"></i>&nbsp;Cancel</button>

            </div>

        </div>
    </div>

</form>
