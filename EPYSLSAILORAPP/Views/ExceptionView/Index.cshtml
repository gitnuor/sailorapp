@{
    ViewBag.Title = "Log Entries";
    Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
}
<script type="text/javascript">
    localStorage.setItem("pageName", "ViewBag.PageName");
    localStorage.setItem("menuId", "ViewBag.MenuId");
</script>

<div class="content-wrapper">
    <div class="main-content">
        <div id="pageId">
            <div class="row">
                <div class="col-span-12">
                 
                    <div class="box">
                        <div class="row">
                          
                            
                            <table id="logTable" class="table table-striped table-bordered">
                                <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Level</th>
                                    
                                    <th>Request Path</th>
                                    <th>Message</th>
                                   
                                
                                </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/lib/jquery.ui/jquery-ui.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <!-- Include DataTables CSS -->
    <link href="~/lib/datatables-1.13.6/css/jquery.datatables.min.css" rel="stylesheet" />

    <!-- Include DataTables JS -->
    <script src="~/lib/datatables-1.13.6/js/jquery.datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#logTable').DataTable({
                "processing": true,              
                "serverSide": true,
                "scrollX": true,
                "scrollY": "500",
                "ajax": {
                    "url": "/ExceptionView/GetLogs",
                    "type": "GET"
                },
           
                "columns": [
                    { "data": "timestamp" },
                    { "data": "level" },
                    { "data": "requestPath" },
                    { "data": "messageTemplate" }
                ]
            });
        });
    </script>
}
