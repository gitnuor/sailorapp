    function calculateFailQty(element) {
        var row = element.closest('tr');
        var recQty = parseFloat(row.querySelector('.recQty').value) || 0;
        var passQty = parseFloat(row.querySelector('.passQty').value) || 0;

        var failQty = recQty - passQty;
