                        </div>

                        <div class="col-md-4" style="display:none;top:-20px;" id="finishing">
                            <label class="col-sm-8 col-form-label-sm text-left" style="font-size:12px;margin-bottom: 0; padding: 0;">Sub Group</label>
                            @await Component.InvokeAsync("GenericDropdownList", new
                                {
                                    ddlId = "ddlFinishing",
                                    strobjlist = Newtonsoft.Json.JsonConvert.SerializeObject(((List<SelectListItem>)ViewBag.SubCategoryFinishinList)),
                                    selectedvalue = "",
                                    cssclass = "form-control",
                                    enable = true,
                                    isRequired = false,
                                    placeholder = "Select"
                                })

                            <div class="col-md-5">
                                <button type="button" class="btn btn-primary" onclick="AddNewAccessories(this);" style="margin-left: 207px;margin-top: -55px !important;width: 130px;font-size: 13px;">
                                    <i class="fa fa-save"></i>&nbsp;&nbsp;Add
                                </button>

