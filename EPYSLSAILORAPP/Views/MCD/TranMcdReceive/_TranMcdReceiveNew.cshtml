                            <div class="form-group">
                                <button type="button" class="btn btn-primary" onclick="AddNewFabric(this);" style="margin-left: -20px;width: 65px;height: 30px;font-size: 13px;"><i class="fa fa-save"></i>&nbsp;&nbsp;Add Fabric</button>
                            </div>
                        </div>
                    </div>
                </div>
                
            }
            @if (Model.item_structure_group_id != 1)
            {
                <div class="col-md-6"  id="accosories">
                    <div class="row">
                        <div class="col-md-4" style="top:-20px;">
