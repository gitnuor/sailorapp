                            @await Component.InvokeAsync("GenericDropdownList", new
                                {
                                    ddlId = "ddlgroupId",
                                    strobjlist = Newtonsoft.Json.JsonConvert.SerializeObject(((List<SelectListItem>)ViewBag.GroupList)),
                                    selectedvalue = "",
                                    cssclass = "form-control",
                                    enable = true,
                                    isRequired = false,
                                    placeholder = "Select"
                                })
