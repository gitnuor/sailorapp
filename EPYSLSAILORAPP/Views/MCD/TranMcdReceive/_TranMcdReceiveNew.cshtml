                            @await Component.InvokeAsync("GenericDropdownList", new
                                {
                                    ddlId = "ddlSewing",
                                    strobjlist = Newtonsoft.Json.JsonConvert.SerializeObject(((List<SelectListItem>)ViewBag.SubCategorySewingList)),
