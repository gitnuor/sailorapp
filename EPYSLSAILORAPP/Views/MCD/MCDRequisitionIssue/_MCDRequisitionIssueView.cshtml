    function GetAllSegment() {
        var alltext = "";

        for (var id = 1; id <= 15; id++) {
            if ($("#modalcontent-common_popup #segment_det" + id + "_id").length > 0) {
                alltext += $("#modalcontent-common_popup #segment_det" + id + "_id > option:selected").text() + " ";
            }

        }

        if (alltext.length == 0) {
            alltext = $("#txtgroupname").val();
        }

        return alltext;
    }
