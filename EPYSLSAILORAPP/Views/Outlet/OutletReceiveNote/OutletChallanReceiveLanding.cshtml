@section Scripts {
    <script>
        
        function closePopup() {       
            event.preventDefault();
            $('#modalcontent').html("");
            $('#modalcontainer').modal("hide");
            //location.reload();
        }

        function AddItem(btn) {
             
           // var tran_production_process_id = $(btn).attr("tran_production_process_id");

            setTimeout(function () {
                showLoader("Loading..........");
            }, 0);

            try {
                ajaxGetHandler("/OutletChallan/TranOutletChallanNew" , null, function (data) {

                    setTimeout(function () {
                        hideLoader();
                    }, 0);

                    $('#modalcontent').html(data);
                    $('#modalcontainer').modal({ backdrop: 'static', keyboard: false });
                    $('#modalcontainer').modal("show");

                });


            } catch (e) {
                setTimeout(function () {
                    hideLoader();
                }, 0);
            }

        }

        function SaveOutletChallanReceive(btn) {
            
            var details = [];
            $.each($("#DTOutletChallanReceive tbody tr"), function (key, val) {

                var obj_TranOutletChallanReceiveDetails = {

                    techpack_id: $(this).find(".techpack_id").val(),
                    style_item_product_id: $(this).find(".style_item_product_id").val(),
                    color_code: $(this).find(".color_code").val(),
                    barcode: $(this).find(".barcode").val(),
                    style_product_size_group_detid: $(this).find(".style_product_size_group_detid").val(),
                    style_product_size: $(this).find(".style_product_size").val(),
                    style_product_unit: $(this).find(".style_product_unit").val(),
                    mrp: $(this).find(".mrp").val(),
                    distribute_size_quantity: $(this).find(".distribute_size_quantity").val(),
                    challan_quantity: $(this).find(".challan_quantity").val(),
                    receive_quantity: $(this).find(".receive_quantity").val(),
                    reject_quantity: $(this).find(".reject_quantity").val(),
                    total_value: $(this).find(".total_value").val(),
                    remarks: $(this).find(".remarks").val()

                }
                details.push(obj_TranOutletChallanReceiveDetails);
            });

            var obj_TranOutletChallanReceive = {
                del_challan_id: $('#modalcontent #outlet_challan_id').val(),
                del_challan_date: $('#modalcontent #delivery_outlet_challan_date').val(),
                outlet_receive_date: $('#modalcontent #outlet_receive_date').val(),
                delivery_from: $('#modalcontent #SailorFactory').val(),
                delivery_to: $('#modalcontent #outlet_id').val(),
                delivery_address: $('#modalcontent #delivery_address').val(),
                transport_type: $('#modalcontent #transport_id').val(),
                transport_number: $('#modalcontent #transport_number').val(),
                driver_name: $('#modalcontent #driver_name').val(),
                driver_contact: $('#modalcontent #driver_contact').val(),
                remarks: $('#modalcontent #remarks').val(),
                is_submitted: 1,
                details: details


            }

            setTimeout(function () {
                showLoader("Saving..........");
            }, 0);

            ajaxPostObjectHandler("/OutletReceiveNote/SaveOutletChallanReceive", obj_TranOutletChallanReceive, function (response) {

                setTimeout(function () {
                    hideLoader();
                }, 0);

                if (response.status_Code == "200") {

                    LoadTranOutletChallanPendingData();
                    LoadTranOutletChallanReceiveDraftData();

                    showSuccessAlert("Success", response.status_Result, "OK", function () {

                        closePopup();

                    });
                }
                else {
                    showErrorAlert("Alert", response.status_Result, "OK", function () {

                    });
                }
            }, true, function () { hideLoader(); }, true);

        }


        function AddOutletChallanReceive(btn) {
            
            var tran_delivery_outlet_challan_id = $(btn).attr("tran_delivery_outlet_challan_id");

            setTimeout(function () {
                showLoader("Loading..........");
            }, 100);

            try {
                ajaxGetHandler("/OutletReceiveNote/TranOutletChallanReceiveAdd?tran_delivery_outlet_challan_id=" + tran_delivery_outlet_challan_id, null, function (data) {

                    setTimeout(function () {
                        hideLoader();
                    }, 200);

                    $('#modalcontent').html(data);
                    $('#modalcontainer').modal({ backdrop: 'static', keyboard: false });
                    $('#modalcontainer').modal("show");

                });
            } catch (e) {
                setTimeout(function () {
                    hideLoader();
                }, 200);
            }
        }

        function ViewOutletChallanReceive(btn) {

            var tran_outlet_receive_note_id = $(btn).attr("tran_outlet_receive_note_id");

            setTimeout(function () {
                showLoader("Loading..........");
            }, 100);

            try {
                ajaxGetHandler("/OutletReceiveNote/TranOutletChallanReceiveView?tran_outlet_receive_note_id=" + tran_outlet_receive_note_id, null, function (data) {

                    setTimeout(function () {
                        hideLoader();
                    }, 200);

                    $('#modalcontent').html(data);
                    $('#modalcontainer').modal({ backdrop: 'static', keyboard: false });
                    $('#modalcontainer').modal("show");

                });
            } catch (e) {
                setTimeout(function () {
                    hideLoader();
                }, 200);
            }
        }

        function activeChange() {
            $('#tab_precostinglanding.nav-tabs > li').click(function () {
                // Remove active class from all tabs
                $('#tab_precostinglanding.nav-tabs > li').removeClass('active');
                // Add active class to the clicked tab
                $(this).addClass('active');
                // Remove active class from all tab links
                $('#tab_precostinglanding.nav-tabs > li > a').removeClass('active');
                // Add active class to the clicked tab link
                $(this).find('a').addClass('active');
                // Remove active class from all tab contents
                $('.tab-content > .tab-pane').removeClass('active');
                // Add active class to the corresponding tab content
                var tabContentId = $(this).find('a').attr('href');
                $(tabContentId).addClass('active');
            });
        }


        $(function () {

            LoadTranOutletChallanPendingData();
            LoadTranOutletChallanReceiveDraftData();
            activeChange();
        });

        function LoadTranOutletChallanPendingData() {
            var dt = $("#DTTranOutletChallanPending").DataTable({
                "bFilter": false,
                "ajax": $.fn.dataTable.json({ url: "/OutletReceiveNote/GetTranOutletChallanPendingData" }),

                columnDefs: [
                    { targets: 0, "visible": true, "sortable": true },
                    { targets: 1, "visible": true, "sortable": false, "className": "text-center" }
                ],
                createdRow: function (row, data, dataIndex) {//

                    $(row).attr('row_index', parseInt(data.row_index) - 1);
                    $(row).attr("tran_delivery_outlet_challan_id", data.tran_delivery_outlet_challan_id);

                },
                "columns": [


                    { "data": "delivery_outlet_challan_no", "name": "delivery_outlet_challan_no", "autoWidth": true },
                    {
                        "data": "delivery_outlet_challan_date",
                        "name": "delivery_outlet_challan_date",
                        "autoWidth": true,
                        "render": function (data, type, row) {
                            var date = new Date(data);
                            var monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
                                "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
                            var monthName = monthNames[date.getMonth()];
                            var formattedDate = date.getFullYear() + "-" + monthName + "-" + ('0' + date.getDate()).slice(-2);
                            return formattedDate;
                        }
                    },
                    { "data": "delivery_from", "name": "delivery_from", "autoWidth": true },
                    { "data": "outlet_name", "name": "outlet_name", "autoWidth": true },
                    { "data": "delivery_address", "name": "delivery_address", "autoWidth": true },
                    { "data": "transport_number", "name": "transport_number", "autoWidth": true },
                    { "data": "driver_name", "name": "driver_name", "autoWidth": true },
                    { "data": "datatablebuttonscode", "name": "datatablebuttonscode", "autoWidth": true },

                ]
            });
        }

        function LoadTranOutletChallanReceiveDraftData() {
            var dt = $("#DTTranOutletChallanReceiveDraft").DataTable({
                "bFilter": false,
                "ajax": $.fn.dataTable.json({ url: "/OutletReceiveNote/GetTranOutletChallanReceiveDraftData" }),

                columnDefs: [
                    { targets: 0, "visible": true, "sortable": true },
                    { targets: 1, "visible": true, "sortable": false, "className": "text-center" }
                ],
                createdRow: function (row, data, dataIndex) {//

                    $(row).attr('row_index', parseInt(data.row_index) - 1);
                    $(row).attr("tran_outlet_receive_note_id", data.tran_outlet_receive_note_id);

                },
                "columns": [


                    { "data": "outlet_receive_no", "name": "outlet_receive_no", "autoWidth": true },
                    {
                        "data": "outlet_receive_date",
                        "name": "outlet_receive_date",
                        "autoWidth": true,
                        "render": function (data, type, row) {
                            var date = new Date(data);
                            var monthNames = ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
                                "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
                            var monthName = monthNames[date.getMonth()];
                            var formattedDate = date.getFullYear() + "-" + monthName + "-" + ('0' + date.getDate()).slice(-2);
                            return formattedDate;
                        }
                    },
                    { "data": "delivery_from", "name": "delivery_from", "autoWidth": true },
                    { "data": "outlet_name", "name": "outlet_name", "autoWidth": true },
                    { "data": "delivery_address", "name": "delivery_address", "autoWidth": true },
                    { "data": "transport_number", "name": "transport_number", "autoWidth": true },
                    { "data": "driver_name", "name": "driver_name", "autoWidth": true },
                    { "data": "datatablebuttonscode", "name": "datatablebuttonscode", "autoWidth": true },

                ]
            });
        }

    </script>
}





