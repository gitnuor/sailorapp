@model EPYSLSAILORAPP.Domain.DTO.tran_sub_contract_received_DTO;
@{
    ViewBag.Title = "Sub Contract Received Add";
    Layout = null;
}
<style>
    #toolbarId select {
        font-size: 11px !important;
    }

    .btninnerClose {
        color: #a52711;
        width: 26px;
